{
  "hosting": [{
    "site": "ai-mediagen",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/generate",
        "function": "apiGenerateProxy"
      },
      {
        "source": "/api/generate/**",
        "function": "apiGenerateProxy"
      }
    ]
  }],
  "functions": {
    "source": "functions",
    "runtime": "nodejs22",
    "platform": "gcfv2"
  },
  "emulators": {
    "hosting": {
      "port": 5002,
      "host": "localhost"
    },
    "functions": {
      "host": "localhost",
      "port": 5003
    }
  }
}