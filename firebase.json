{
  "hosting": {
    "site": "inreelio",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/generate",
        "function": "apiGenerateProxy"
      },
      {
        "source": "/api/generate/**",
        "function": "apiGenerateProxy"
      },
      {
        "source": "/api/**",
        "function": "apiGenerateProxy"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22",
    "platform": "gcfv2"
  },
  "emulators": {
    "hosting": {
      "port": 5002,
      "host": "0.0.0.0"
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 5003
    }
  }
}